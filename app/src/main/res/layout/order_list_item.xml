<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:descendantFocusability="beforeDescendants"
	android:layout_margin="5dp"
	app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingBottom="5dp" >
        <TextView 
            android:id="@+id/order_no_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#999B9E"
            android:textSize="14sp" />
        
        <TextView 
            android:id="@+id/order_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="#FE6868"
            android:textSize="14sp" />
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E1E1E1"
            android:layout_below="@id/order_no_tv"
            android:layout_marginTop="8dp" />
		<android.support.v7.widget.RecyclerView
			android:id="@+id/order_item_product_iv"
			android:layout_width="match_parent"
			android:layout_below="@id/divider"
			android:layout_marginTop="8dp"
			android:layout_height="wrap_content"/>
        <View
            android:id="@+id/p_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E1E1E1"
            android:layout_below="@id/order_item_product_iv"
            android:layout_marginTop="10dp" />

        <TextView 
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/p_divider"
            android:textStyle="bold"
            android:textColor="#F23030"
            android:textSize="20sp"  />
        <Button 
            android:id="@+id/do_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/p_divider"
            android:layout_marginTop="5dp"
            android:padding="6dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/order_item_btn_bg"
            android:focusable="false"
            android:textStyle="bold"
            android:textColor="#F44A4A"
            android:textSize="16sp"
			android:text="1111"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>